---
import Section from '@/components/Section'
import Icon from '@/components/ui/icon'
import { H1 } from '@/components/ui/typography'
import Layout from '@/layouts/Layout.astro'
---

<Layout title="Thank You!">
  <Section.Root className="bg-secondary rounded-md">
    <Section.Content>
      <div class="min-h-[calc(100vh-18rem)] flex items-center justify-center">
        <div class="flex flex-col gap-8 items-center text-center">
          <Icon name="Heart" size={48} className="stroke-primary/50" />
          <H1>Thank You</H1>
          <p class="text-lg text-slate-600">Thank you for subscribing to my newsletter! Go check your emails!</p>
        </div>
      </div>
    </Section.Content>
  </Section.Root>
</Layout>
