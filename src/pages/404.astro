---
import Section from '@/components/Section'
import Icon from '@/components/ui/icon'
import { H1 } from '@/components/ui/typography'
import Layout from '@/layouts/Layout.astro'
---

<Layout title="Thank You!">
  <Section.Root className="  rounded-ss-3xl relative pb-8">
    <Section.Content>
      <div class="min-h-[calc(100vh-18rem)] flex items-center justify-center bg-secondary-light/20 m-12 rounded-3xl">
        <div class="flex flex-col gap-8 items-center text-center">
          <Icon name="SearchX" size={48} className="stroke-primary/50" />
          <H1 className="text-7xl">404</H1>
          <p class="text-lg text-slate-600">Page not found</p>
        </div>
      </div>
      <svg
        class="absolute -bottom-2 left-0 w-full fill-primary-dark"
        viewBox="0 0 1440 96"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          fill-rule="evenodd"
          clip-rule="evenodd"
          d="M0 28.8L60 27.2C120 25.6 240 22.4 360 27.2C480 32 600 44.8 720 54.4C840 64 960 70.4 1080 60.8C1200 51.2 1320 25.6 1380 12.8L1440 0V96H1380C1320 96 1200 96 1080 96C960 96 840 96 720 96C600 96 480 96 360 96C240 96 120 96 60 96H0V28.8Z"
        >
        </path>
      </svg>
    </Section.Content>
  </Section.Root>
</Layout>
