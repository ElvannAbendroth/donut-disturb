---
import Layout from '@/layouts/Layout.astro'
import { siteConfig } from '@/utils/config'
import { Title, H1, H2 } from '@/components/ui/typography'
import { Button } from '@/components/ui/button'
import heroImage from '../assets/hero-donut.png'
import quizImage from '../assets/quiz.png'

export const prerender = true
---

<Layout title={siteConfig.name}>
  <!-- Hero Section -->
  <div class="bg-secondary-light pt-48 md:pt-36 px-4 md:py-32 md:px-8 overflow-hidden relative">
    <div class="max-w-layout mx-auto min-h-96 flex flex-col align-middle gap-4">
      <div class="relative z-0 flex flex-col gap-4">
        <img
          class="absolute top-0 left-0 -translate-y-1/3 translate-x-1/3 -z-10 scale-[120%] md:scale-[90%]"
          src={heroImage.src}
          alt="Donut Splashing"
        />
        <Title className="max-w-lg">Donut Disturb</Title>
        <p class="max-w-xs">Games for donut enthusiasts & folks with a sweet tooth.</p>
        <div><a href="/quiz"><Button variant={'secondary'}>Take the Quiz</Button></a></div>
      </div>
    </div>
    <svg
      class="absolute -bottom-2 left-0 w-full fill-background"
      viewBox="0 0 1440 96"
      xmlns="http://www.w3.org/2000/svg"
    >
      <path
        fill-rule="evenodd"
        clip-rule="evenodd"
        d="M0 28.8L60 27.2C120 25.6 240 22.4 360 27.2C480 32 600 44.8 720 54.4C840 64 960 70.4 1080 60.8C1200 51.2 1320 25.6 1380 12.8L1440 0V96H1380C1320 96 1200 96 1080 96C960 96 840 96 720 96C600 96 480 96 360 96C240 96 120 96 60 96H0V28.8Z"
      >
      </path>
    </svg>
  </div>
  <!-- Mini Games Section -->
  <div class="bg-background px-4 md:py-36 md:px-8 overflow-hidden relative min-h-32 py-16">
    <div class="max-w-layout mx-auto flex flex-col align-middle gap-8 relative z-0">
      <H1 className={'text-center'}>Mini Games</H1>

      <a href="/quiz">
        <div class="flex gap-10 items-center w-full hover:opacity-90 transition-all hover: cursor-pointer">
          <img
            class="size-64 aspect-square object-cover rounded-3xl"
            src={quizImage.src}
            alt="Three creamy and tasty donuts"
          />

          <div class="flex flex-col gap-4">
            <H2>QUIZ: What Donut Are you?</H2>
            <span><a href="/quiz"><Button variant={'secondary'}>Take the Quiz</Button></a></span>
          </div>
        </div>
      </a>
    </div>

    <svg
      class="absolute -bottom-2 left-0 w-full fill-primary-dark"
      viewBox="0 0 1440 96"
      xmlns="http://www.w3.org/2000/svg"
    >
      <path
        fill-rule="evenodd"
        clip-rule="evenodd"
        d="M0 28.8L60 27.2C120 25.6 240 22.4 360 27.2C480 32 600 44.8 720 54.4C840 64 960 70.4 1080 60.8C1200 51.2 1320 25.6 1380 12.8L1440 0V96H1380C1320 96 1200 96 1080 96C960 96 840 96 720 96C600 96 480 96 360 96C240 96 120 96 60 96H0V28.8Z"
      >
      </path>
    </svg>
  </div>
</Layout>
